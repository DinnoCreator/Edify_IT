<main class="form-signin">
  <form action="/auth/register" method="POST">
    <p style="color: yellow;">Email already exists.</p>
    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" name="username" minlength="11"
        autocomplete="off" required>
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" name="fName"  autocomplete="off" required>
      <label for="floatingInput">First Name</label>
    </div>
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" name="mName"  autocomplete="off" required>
      <label for="floatingInput">Middle Name</label>
    </div>
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" name="lName"  autocomplete="off" required>
      <label for="floatingInput">Last Name</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="yo" name="password" id="floatingPassword" minlength="8" 
      autocomplete="new-password" required>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" onclick="myFunction()" value="" id="flexCheckDefault">
      <label class="form-check-label" style="color: antiquewhite;" for="flexCheckDefault">
        Show Password
      </label>
    </div>
    

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
    <p class="mt-5 mb-3 text-muted">Edidiong Obodom Â© 2022</p>
  </form>
</main>   

