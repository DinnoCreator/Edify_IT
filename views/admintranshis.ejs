  <div class="row">
<%histories.forEach(history => {%>
 
          <% if (history.senderAccNo === HolderAccNo || history.receiverAccNo === HolderAccNo && history.status === 'Transaction Successful...') { %> 
          <div id="hide" style="margin-top: 3%;" class="infoBody dey col-md-6 col-lg-4">
            <form action="/adminreverse/<%= email %>/<%= HolderAccNo %>" method="post">
              <div class="card">
                  <div class="card-body bg-light cardMargin">
                      
                      <div class="form-floating">
                          <select class="form-select" name="id" aria-label="Default select example">
                              <option value="<%= history.username %>">Trans_ID: <%= history.username %></option>
                              
                            </select>
                        </div>
                      <div class="form-floating">
                          <select class="form-select" name="sender" aria-label="Default select example">
                              <option value="<%= history.senderName %>">Sender Name: <%= history.senderName %></option>
                              
                            </select>
                        </div>
                      <div class="form-floating">
