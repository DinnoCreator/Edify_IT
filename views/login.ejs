<%- include('partials/header') %> 

<main class="form-signin drop">
  <form action="/login" method="POST">
    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" name="username"  minlength="11" 
      autocomplete="off" required>
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="yo" name="password" id="floatingPassword" minlength="8"
       autocomplete="new-password" required>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" onclick="myFunction()" value="" id="flexCheckDefault">
      <label class="form-check-label" style="font-size: 15px; color: antiquewhite;" for="flexCheckDefault">
        Show Password
      </label>
    </div>


    

    <button class="w-100 btn btn-lg btn-primary" type="submit">Log In</button>
    <p><a href="/auth/securityquechecknot" style="font-size: 15px; color: antiquewhite; text-decoration: none;">Forgot Password?</a></p>
    <p class="mt-5 mb-3 text-muted">Edidiong Obodom Â© 2022</p>
  </form>
</main>   

