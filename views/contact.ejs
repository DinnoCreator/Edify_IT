        <div class="wrapper">
            
            <form action="/message" method="post">
              <div class="field capitalize">
                <input type="text" id="name" name="name" placeholder="Who are you?" maxlength="50" required autocomplete="off"/>
                <label for="name">Name</label>
              </div>
              <div class="field">
                <input type="email" id="email" name="email" maxlength="50" autocomplete="off" required placeholder="name@domain.tld" />
                <label for="email">E-Mail</label>
              </div>
              <div class="field">
                <textarea id="msg" rows="4" name="msg" autocomplete="off" maxlength="200"
                 required placeholder="Your message..."></textarea>
                <label for="msg">Your Message</label>
                <div id="the-count">
                    <span id="current">0</span>
                    <span id="maximum">/ 200</span>
                  </div>
              </div>
              <input class="button" type="submit"/>
            </form>
          
          </div>
        </div>

        
