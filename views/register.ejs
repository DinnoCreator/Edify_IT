<% if (exist === 'true') { %>
<main class="form-signin drop">
  <form action="/registerold/<%= email %>" method="post">
    <div class="form-floating">
      <input type="text" class="form-control" value="<%= fname %>" readonly>
    </div>
    <div class="form-floating">
      <input type="text" class="form-control" value="<%= lname %>" readonly>
    </div>
    <div class="form-floating">
      <select class="form-select" name="accountType" aria-label="Default select example" required>
          <option value="Savings">Savings</option>
          <option value="Current">Current</option>
