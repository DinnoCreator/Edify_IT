<script>
   function year() {
    const today = new Date();
    const options = {
        year: 'numeric'
    };
 
    return today.toLocaleDateString('en-US', options);
  }
   function minyear() {
    return Number(year() - 18);
  }
   function maxyear() {
    return Number(year() - 100);
  }
   function month() {
    const today = new Date();
    const options = {
        month: 'numeric'
    };
 
    return today.toLocaleDateString('en-US', options);
}
 function day() {
    const today = new Date();
    const options = {
        day: 'numeric',
    };
 
    return today.toLocaleDateString('en-US', options);
}
 

 window.onload = $(document).ready(function() {
    $("#start").attr({
      "min" : `${maxyear()}-${month()}-${day()}`,
      "max" : minyear() + '-' + month() + '-' + day()   
    });
});
</script>

