                        <div class="form-floating">
                          <input type="text" class="form-control" id="floatingInput" value="<%= ReceiverName %>" 
                          name="receivername"  autocomplete="off" readonly>
                        </div>
                        <div class="form-floating">
                          <input type="text" class="form-control" id="floatingInput" value="<%= ReceiverAccNo %>" 
                          name="receiver"  autocomplete="off" readonly>
                        </div>
                        <div class="form-floating">
                          <input type="password" class="form-control" id="yo" name="password" id="floatingPassword" minlength="4" 
                          maxlength="4" autocomplete="new-password" required>
                          <label for="floatingPassword">4Digit-Pin</label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" onclick="myFunction()" value="" id="flexCheckDefault">
                          <label class="form-check-label" style="color: #777777;" for="flexCheckDefault">
                            Show 4Digit-Pin
                          </label>
